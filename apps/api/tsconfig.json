{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "sourceMap": false,
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/services/*": ["services/*"],
      "@/repositories/*": ["repositories/*"],
      "@/controllers/*": ["controllers/*"],
      "@/types/*": ["types/*"],
      "@/task/*": ["task/*"],
      "@/utils/*": ["utils/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/validators/*": ["validators/*"]
    }
  },

  "exclude": ["./dist", "./node_modules", "next-i18next.config.js"],
  "include": ["src/**/*.ts"]
}
