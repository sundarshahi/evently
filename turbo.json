{
  "$schema": "https://turbo.build/schema.json",
   "globalEnv": ["DATABASE_URL", "BASE_URL","PORT"],
  "tasks": {
    "@repo/db#build": {
      "cache": false,
      "dependsOn": ["^postinstall"]
    },
     "@repo/db#db-migrate": {
      "cache": false,
      "dependsOn": ["@repo/db#db-up"],
      "inputs": ["./schema.prisma", "./migrations/**/*.sql"]
    },
     "@repo/db#db-up": {
      "cache": false
    },
     "@repo/api#dev": {
      "dependsOn": ["^task-up"],
      "env": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL",
        "BASE_URL"
      ]
    },
    "@repo/api#build": {
      "dependsOn": ["^postinstall"],
      "env": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL",
        "BASE_URL"
      ]
    },
     "@repo/api#dx": {
      "cache": false,
      "dependsOn": ["@repo/db#dx"]
    },
     "@repo/db#dx": {
      "cache": false,
      "dependsOn": ["@repo/db#db-migrate"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
     "db-deploy": {
      "cache": false,
      "inputs": ["./migrations/**/*.sql", "./prisma/migrations/**/*.sql"]
    },
    "clean": {
      "cache": false,
      "outputs": ["dist/**", "build/**"]
    },
    "dx": {
      "dependsOn": ["//#env-check:common"],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "task-up":{
      "cache": false,
      "persistent": true
    },
    "worker-up":{
       "cache": false,
      "persistent": true
    },
    "start:prod": {
      "cache": false,
      "persistent": true
    },
     "//#env-check:common": {
      "cache": false,
      "inputs": ["./.env.example", "./.env"],
      "outputs": ["./.env"]
    }
    
  }
}
